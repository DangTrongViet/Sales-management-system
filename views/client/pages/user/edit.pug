extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/box-head.pug

block main 
    +box-head('Chỉnh sửa tài khoản') 
    +alert-error(5000)
    +alert-success(5000)

    form(
        action = `/user/edit?_method=PATCH`
        method="POST"
      ) 
        div(class="form-group")
          label(for="fullName") Họ tên *
          input(
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            required
            value=user.fullName
          ) 

        div(class="form-group")
          label(for="email") Email *
          input(
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            value=user.email
          )
        
        div(class="form-group")
          label(for="password") Mật khẩu *
          input(
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
            value = user.password
          ) 
        div(form="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Cập nhập
