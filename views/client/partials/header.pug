//- Note: .container <=> div.container
include ../mixins/sub-menu.pug

header.header 
  .container 
    .row.align-items-center 
      .col-3 
        .inner-logo 
          a(href="/")
            img.logo-img(
              src=(settingGeneral && settingGeneral.logo) || '/images/logo-placeholder.png',
              alt=(settingGeneral && settingGeneral.websiteName) || 'Logo'
            )
      .col-5
        form(action="/search" method="GET")
          .form-group.d-flex.mb-0
            input.form-control(
              type="text",
              placeholder="Nhập từ khóa...",
              name="keyword",
              value=keyword || ''
            )
            button.btn.btn-primary(type="submit")
              i.fa-solid.fa-magnifying-glass
      .col-4 
        .inner-menu 
          ul 
            li 
              a(href="/")
                i.fa-solid.fa-house
                |  Trang chủ
            li.sub-menu
              - const pathProduct = "/products"
              a(href=pathProduct)
                i.fa-solid.fa-box-open
                |  Sản phẩm
              if (layoutProductCategory && layoutProductCategory.length)
                +sub-menu(layoutProductCategory, pathProduct)
            li 
              a(href="/cart")
                i.fa-solid.fa-cart-shopping
                |  Giỏ hàng (
                = (miniCart && miniCart.totalQuantity) || 0
                | )

            if user
              li 
                a(href="/users/friends")
                  i.fa-solid.fa-user-group
                  |  Bạn bè
              li 
                a(href="/rooms-chat")
                  i.fa-solid.fa-users-rectangle
                  |  Phòng chat
              li 
                a(href="/user/info")
                  i.fa-solid.fa-user
                  |  
                  = user.fullName
              li 
                a(href="/user/logout")
                  i.fa-solid.fa-right-from-bracket
                  |  Đăng xuất
            else
              li 
                a(href="/user/login")
                  i.fa-solid.fa-right-to-bracket
                  |  Đăng nhập
              li 
                a(href="/user/register")
                  i.fa-solid.fa-user-plus
                  |  Đăng ký
