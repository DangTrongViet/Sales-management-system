doctype html
html(lang="vi")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= pageTitle

    // CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/admin/css/style.css")

  body
    if (role && role.permission && role.permission.length > 0)
      include ../partials/header.pug
      .body
        include ../partials/sider.pug
        .main
          block main

      // JS: Đặt CUỐI BODY và đúng THỨ TỰ: jQuery -> Popper -> Bootstrap
      // jQuery (dùng bản full để tránh lỗi nếu code bạn dùng $.ajax, effects...)
      script(src="https://code.jquery.com/jquery-3.6.4.min.js")

      // Popper (cho dropdown, tooltip...)
      script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js")

      // Bootstrap 4 JS (KHÔNG đặt trước jQuery)
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js")

      // TinyMCE
      script(src="/tinymce/tinymce.min.js")
      script(src="/admin/js/tinymce-config.js")

      // Script của bạn
      script(src="/admin/js/script.js")
    else
      h1 Bạn không có quyền truy cập
